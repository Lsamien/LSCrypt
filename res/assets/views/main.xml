<?xml version="1.0" encoding="UTF-8" ?>
<lcui-app>
  <resource type="text/css" src="assets/stylesheets/lc-design.css"/>
  <resource type="text/css" src="assets/stylesheets/demo.css"/>
  <ui>
    <w class="navbar navbar-dark demo-navbar float-top">
      <w class="navbar-brand" type="textview">LC</w>
      <w class="navbar-nav" id="demo-navbar-links">
        <w class="nav-item" nav-point="home">
          <w class="nav-link" type="a" id="navbar-link-home" href="home.xml" target="demo-body">Home</w>
        </w>
        <w class="nav-item" nav-point="docs">
          <w class="nav-link" type="a" id="navbar-link-docs" href="documentation.xml" target="demo-body">Documentation</w>
        </w>
      </w>
      <w class="navbar-nav float-right">
        <w class="nav-item">
          <w id="btn-change-global-scale" class="nav-link" data-toggle="dropdown" data-target="dropdown-global-scale">
            <w type="textview">100%</w>
            <w type="icon" class="text" name="chevron-down"></w>
          </w>
          <w type="dropdown-menu" id="dropdown-global-scale">
            <w type="h6" class="dropdown-header">Zoom level</w>
            <w type="textview" class="dropdown-item" value="1">100%</w>
            <w type="textview" class="dropdown-item" value="1.25">125%</w>
            <w type="textview" class="dropdown-item" value="1.5">150%</w>
            <w type="textview" class="dropdown-item" value="1.75">175%</w>
            <w type="textview" class="dropdown-item" value="2">200%</w>
          </w>
        </w>
        <w class="nav-item">
          <w type="a" href="https://github.com/lc-ui/lcui.css" class="nav-link icon icon-github-circle"></w>
        </w>
        <w type="a" href="https://github.com/lc-ui/lcui.css/releases" class="btn btn-outline-yellow ml-3">Download</w>
      </w>
    </w>
    <w id="demo-body" class="demo-body"></w>
  </ui>
</lcui-app>

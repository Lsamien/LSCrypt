<lcui-app>
  <ui>
    <w type="message-view" class="view">
      <w type="h1">Message</w>
<w type="p">Display global messages as feedback in response to user operations.</w>
<w type="h2">Normal prompt</w>
<w type="p">Normal message for information.</w>
<w class="button-container">
  <button ref="open-normal-message" class="btn btn-primary">Display normal message</button>
</w>
<w type="code-block" class="code-block">[color=#0000ff]#include[/color] [color=#008000][i]&lt;LCUI.h&gt;[/color][/i][color=#0000ff][/color]
[color=#0000ff]#include[/color] [color=#008000][i]&lt;LCUI/gui/widget.h&gt;[/color][/i][color=#0000ff][/color]
[color=#0000ff]#include[/color] [color=#008000][i]&lt;LCDesign/ui/components/message.h&gt;[/color][/i][color=#0000ff][/color]

[color=#0000ff][b]static[/color][/b] [color=#2b91af]void[/color] [color=#06287e]OpenMessage[/color](LCUI_Widget w, LCUI_WidgetEvent e, [color=#2b91af]void[/color] [color=#666666]*[/color]arg)
{
    LCDesign_OpenInfoMessage([color=#a31515]L[/color][color=#a31515]&quot;This is a normal message&quot;[/color], [color=#40a070]3000[/color]);
}

[color=#008000][i]// ... other code[/color][/i]

    LCUI_Widget btn [color=#666666]=[/color] LCUIWidget_GetById([color=#a31515]&quot;btn-open-message&quot;[/color]);
    Widget_BindEvent(btn, [color=#a31515]&quot;click&quot;[/color], OpenMessage, [color=#007020]NULL[/color], [color=#007020]NULL[/color]);

[color=#008000][i]// ... other code[/color][/i]</w>

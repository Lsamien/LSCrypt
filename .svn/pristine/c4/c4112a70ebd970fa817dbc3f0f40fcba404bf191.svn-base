<w type="h2">Customized Icon</w>
<w type="p">The icon can be customized to any widget.</w>
<w class="button-container">
  <button ref="notification-custom-icon" class="btn btn-primary">Open the notification box</button>
</w>
<w type="code-block" class="code-block">[color=#0000ff]#include[/color] [color=#008000][i]&lt;LCUI.h&gt;[/color][/i][color=#0000ff][/color]
[color=#0000ff]#include[/color] [color=#008000][i]&lt;LCUI/gui/widget.h&gt;[/color][/i][color=#0000ff][/color]
[color=#0000ff]#include[/color] [color=#008000][i]&lt;LCDesign/ui/components/notification.h&gt;[/color][/i][color=#0000ff][/color]

[color=#0000ff][b]static[/color][/b] [color=#2b91af]void[/color] [color=#06287e]OpenNotification[/color](LCUI_Widget w, LCUI_WidgetEvent e, [color=#2b91af]void[/color] [color=#666666]*[/color]arg)
{
    LCUI_Widget icon;
    LCDesign_NotificationConfigRec config;

    icon [color=#666666]=[/color] LCUIWidget_New([color=#a31515]&quot;icon&quot;[/color]);
    Icon_SetName(icon, [color=#a31515]&quot;emoticon-happy-outline&quot;[/color]);
    Widget_SetStyleString(icon, [color=#a31515]&quot;color&quot;[/color], [color=#a31515]&quot;#108ee9&quot;[/color]);

    config.icon [color=#666666]=[/color] icon;
    config.duration [color=#666666]=[/color] [color=#40a070]4500[/color];
    config.placement [color=#666666]=[/color] [color=#007020]NULL[/color];
    config.title [color=#666666]=[/color] [color=#a31515]L[/color][color=#a31515]&quot;Notification Title&quot;[/color];
    config.description [color=#666666]=[/color]
        [color=#a31515]L[/color][color=#a31515]&quot;This is the content of the notification. This is the content of &quot;[/color]
        [color=#a31515]L[/color][color=#a31515]&quot;the notification. This is the content of the notification.&quot;[/color];
    LCDesign_OpenNotification([color=#666666]&amp;[/color]config);
}


<lcui-app>
  <ui>
    <w type="switch-view" class="view">
      <w type="h1">Switch</w>
<w type="p">Represent the switching between two states or on-off state.</w>
<w type="h2">Basic</w>

<w class="demo-box switch-basic-demo">
  <w class="demo-preview-box"><switch checked="checked">Subscribe to weekly newsletter</switch></w>
  <w type="code-block" class="code-block">[color=#062873][b]&lt;switch[/color][/b] [color=#4070a0]checked=[/color][color=#a31515]&quot;checked&quot;[/color][color=#062873][b]&gt;[/color][/b]Subscribe to weekly newsletter[color=#062873][b]&lt;/switch&gt;[/color][/b]</w>
</w>
<w type="h2">Text &amp; icon</w>
<w type="p">With text and icon.</w>

<w class="demo-box switch-text-icon-demo">
  <w class="demo-preview-box"><p>
  <switch checked-text="开" unchecked-text="关" checked="checked" />
</p>
<p>
  <switch checked-text="1" unchecked-text="0" />
</p>
<p>
  <switch checked-icon="check" unchecked-icon="close" checked="checked" />
</p></w>
  <w type="code-block" class="code-block">[color=#062873][b]&lt;p&gt;[/color][/b]
  [color=#062873][b]&lt;switch[/color][/b] [color=#4070a0]checked-text=[/color][color=#a31515]&quot;开&quot;[/color] [color=#4070a0]unchecked-text=[/color][color=#a31515]&quot;关&quot;[/color] [color=#4070a0]checked=[/color][color=#a31515]&quot;checked&quot;[/color] [color=#062873][b]/&gt;[/color][/b]
[color=#062873][b]&lt;/p&gt;[/color][/b]
[color=#062873][b]&lt;p&gt;[/color][/b]
